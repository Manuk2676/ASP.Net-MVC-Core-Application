@{
}
@model EmployeeDetailsWebAppMVCCore.Models.AddEmployeeViewModel

<h1>Add Employee</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">id</label>
        <input type="number" class="form-control" asp-action="id"/>
    </div>

    <div class="mt-3">
        <label class="form-label">firstName</label>
        <input type="text" class="form-control" asp-for="firstName"/>
    </div>

    <div class="mt-3">
        <label class="form-label">lastName</label>
        <input type="text" class="form-control" asp-for="lastName" />
    </div>

    <div class="mt-3">
        <label class="form-label">salary</label>
        <input type="number" class="form-control" asp-for="salary"/>
    </div>

    <div class="mt-3">
        <label class="form-label">eMail</label>
        <input type="text" class="form-control" asp-for="eMail"/>
    </div>

    <div class="mt-3">
        <label class="form-label">joiningDate</label>
        <input type="date" class="form-control" asp-for="joiningDate"/>
    </div>

    <div class="mt-3">
        <label class="form-label">project</label>
        <input type="text" class="form-control" asp-for="project"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>